FROM rust:1.83.0@sha256:a8d35e1b1e7c4dc0c82a4a06dfc4e2e7aac3e3e4b9e6a5f3a7e0a0e3f2e8e7e9 AS builder

WORKDIR /build

RUN rustup target add aarch64-unknown-linux-musl && \
    apt-get update && apt-get install -y \
    musl-tools \
    git \
    ca-certificates && \
    rm -rf /var/lib/apt/lists/*

COPY Cargo.toml Cargo.lock ./
COPY src ./src

RUN cargo build --release --target aarch64-unknown-linux-musl

FROM almalinux:9-minimal

RUN microdnf update -y && \
    microdnf install -y \
    git \
    vim \
    ca-certificates && \
    microdnf clean all

WORKDIR /root

COPY --from=builder /build/target/aarch64-unknown-linux-musl/release/dotsync /usr/local/bin/dotsync

COPY .dotsync.json /root/.dotsync.json
